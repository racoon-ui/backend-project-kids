{
  "defaultSeverity": "error",
  "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
  "rules": {
    "import-name": false,
    "variable-name": false,
    "no-submodule-imports": [
      true,
      "source-map-support",
      "module-alias",
      "@components",
      "@config",
      "@utils",
      "@services",
      "@middlewares"
    ],
    "no-implicit-dependencies": [
      true,
      "dev",
      ["@components", "@config", "@utils", "@services", "@middlewares"]
    ],
    "no-boolean-literal-compare": false
  }
}
